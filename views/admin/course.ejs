<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <a href="/admin/courses/add"><button>Add Course</button></a>

    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Course Name</th>
            <th scope="col">Description</th>
            <th scope="col">Duration</th>
            <th scope="col">Category</th>
            <th scope="col">Action Edit</th>
            <th scope="col">Action Delete</th>
          </tr>
        </thead>
        <tbody>
            <% data.forEach(function(el){ %>
            <tr>
              <th scope="row">
                <%= el.name %>
              </th>
              <td>
                <%= el.description %>
              </td>
              <td>
                <%= el.duration %>
              </td>
              <td>
                <%= el.CategoryId %>
              </td>
              <td>
                  <a href="/admin/courses/<%= el.id %>/edit"><button type="button"
                    class="btn btn-outline-danger">edit</button></a></td>
                </td>
              <td>
                    
                    <a href="/admin/courses/<%= el.id %>/delete"><button type="button"
                        class="btn btn-outline-danger">Delete</button></a></td>
              
            </tr>
            <% }) %>
        </tbody>
      </table>
</body>
</html>