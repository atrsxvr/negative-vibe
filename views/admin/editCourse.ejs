<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>

  <body>
    <div class="container">
      <div
        style="margin-top: 30px; max-width: 400px; justify-items: center"
        class="card"
      >
        <div style="margin: 20px">
          <form action="/admin/<%= data.id %>/edit" method="post">
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >Name</label
              >
              <input
                type="text"
                class="form-control"
                name="name"
                value="<%=data.name%>"
              />
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >Description</label
              >
              <textarea
                type="text-area"
                class="form-control"
                name="description"
              >
<%= data.description %></textarea
              >
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >Duration</label
              >
              <input
                type="number"
                class="form-control"
                name="duration"
                placeholder="duration"
                value="<%= data.duration %>"
              />
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >Category</label
              >
              <select name="CategoryId" id="">
                <% categories.forEach(el => { %>
                <option value="<%= el.id %>" <%= data.CategoryId === el.id ? "selected" : "" %>><%= el.name %></option>
                <% }) %>
              </select>
            </div>
            <div class="mb-3">
              <div class="align-content-end col-auto">
                <button type="submit" class="btn btn-primary mb-3">
                  Submit
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
