<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav>
      <div style="display: flex; align-items: center">
        <h3 style="margin-left: 20px">Negative Vibe</h3>
        <div style="margin-left: 990px">
          <a href="/logout"><button>Log Out</button></a>
        </div>
      </div>
    </nav>
    <div class="container">
      <h1 style="margin-top: 20px">Halo, Admin</h1>
      <div style="margin: 30px 5px">
        <a href="/admin/addCourse"><button>Add Course</button></a>
      </div>
      <div>
        <h3>Category</h3>
        <table class="table" style="max-width: 400px">
          <thead>
            <th>Name</th>
            <th>Action</th>
          </thead>
          <% categories.forEach(el => {%>
          <tr>
            <td><%= el.name %></td>
            <td>
              <button>Edit</button>
              <button>Delete</button>
            </td>
          </tr>
          <%})%>
        </table>
      </div>
      <div>
        <h3>Course</h3>
        <table class="table">
          <thead>
            <th>Name</th>
            <th>Duration</th>
            <th>Category</th>
            <th>Action</th>
          </thead>
          <% course.forEach(el => {%>
          <tr>
            <td><%= el.name %></td>
            <td><%= el.duration %> Jam</td>
            <td><%= el.Category.name %></td>
            <td>
              <a href="/admin/<%= el.id %>/edit"><button>Edit</button></a>
              <a href="/admin/<%= el.id %>/delete"><button>Delete</button></a>
            </td>
          </tr>
          <%})%>
        </table>
      </div>
    </div>
  </body>
</html>
